package controller;

import java.io.IOException;
import java.util.ArrayList;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import model.CartVO;
import model.PreVO;
import model.ProDAO;


@WebServlet(value = {"/cart/list","/cart/insert"})
public class CartController extends HttpServlet {
	private static final long serialVersionUID = 1L;
	ProDAO pdao=new ProDAO();
	
	
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

		HttpSession session=request.getSession();
		RequestDispatcher dis=request.getRequestDispatcher("/home.jsp");
		
		
		switch(request.getServletPath()) {
		
		case"/cart/list":
			request.setAttribute("pageName", "/cart/list.jsp");
			dis.forward(request, response);
			break;
		case"/cart/insert":
			String id=request.getParameter("id");
			PreVO pvo=pdao.read(id);
			CartVO cvo=new CartVO();
			cvo.setProd_id(id);
			cvo.setProd_name(pvo.getProd_name());
			cvo.setPrice1(pvo.getPrice1());
			cvo.setQnt(1);
			cvo.setSum(cvo.getPrice1()*cvo.getQnt());
			ArrayList<CartVO> carts=new ArrayList<CartVO>();
			carts.add(cvo);
			session.setAttribute("carts", carts);
			
			
			
			
			
			
			request.setAttribute("pageName", "/cart/list.jsp");
			dis.forward(request, response);
			break;
			
			
		
		
		}

	}


	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {

		
		
		
		
	}
}
