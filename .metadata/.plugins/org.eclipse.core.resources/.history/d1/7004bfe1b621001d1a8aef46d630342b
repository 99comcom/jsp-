<script>

$(frm).on("submit",function(e){
	

$.ajax({
	type:"get",
	url:"/user/login.json",
	data:{uid:uid},
	dataType:"json",
	success:function(data){
		if(data.uid==null){
		alert("아이디가 존재하지 않습니다.");
		$(frm.uid).focus();
		}else if(data.pass!=pass){
				alert("비밀번호가 일치하지 않습니다.");
				$(frm.pass).focus();
				
			}else{
				location.href="/";
			}
		
	}
})
})	
	




</script>